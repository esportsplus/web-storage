{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "baseUrl": "src",
        "declaration": true,
        "declarationDir": "./build",
        "lib": ["dom", "ESNext"],
        "module": "NodeNext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./build",
        "paths": {
            "~/*": ["*"]
        },
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "ESNext"
    },
    "exclude": ["node_modules"],
    "include": ["src"],
    "typeRoots": ["node_modules/@types"]
}
